{
    "testEnvironment": "jest-environment-node",
    "collectCoverageFrom":
    [
        "**/src/js/Redux/Actions/**",
        "**/src/js/Redux/Reducers/**"
    ],
    "coverageThreshold":
    {
        "global":
        {
            "statements": 50,
            "branches": 50,
            "functions": 50,
            "lines": 100
        }
    },
    "transform":
    {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions":
    [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}
